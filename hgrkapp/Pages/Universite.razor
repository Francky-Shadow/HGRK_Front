@page "/universite"

@if (showComponentList)
{
 <Animate Anchor="#b-animate" Auto Animation="selectedAnimation" DelayMilliseconds="500">
    <UniversiteList OnChangeUniversite="HandleOnChange"></UniversiteList>
 </Animate>
}
else 
{
   <Animate Anchor="#b-animate" Auto Animation="selectedAnimation" DelayMilliseconds="500">
    <UniversiteForm OnChangeUniversite="HandleOnChange"></UniversiteForm>
   </Animate>
}


@code {
    private bool showComponentList = true; 
   

    
    private IAnimation selectedAnimation = Animations.ZoomInDown;
    private bool showAnimate = false;
      private async Task Animate()
  {
      if ( !showAnimate )
      {
          showAnimate = true;
          await InvokeAsync( StateHasChanged );

      }
      else
      {
          showAnimate = false;

      }

      await InvokeAsync( StateHasChanged );
  }

    private void HandleOnChange(bool newState)
    {
        showComponentList = newState; // Bascule entre les composants
    }
}
